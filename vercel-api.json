{
  "version": 2,
  "name": "eazyque-api",
  "builds": [
    {
      "src": "apps/api/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["apps/api/**", "packages/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "apps/api/src/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/api/src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm install",
  "buildCommand": "cd apps/api && npm run build",
  "outputDirectory": "apps/api/dist"
}
